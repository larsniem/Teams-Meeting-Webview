    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch local",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "envFile": "${workspaceFolder}/dev.env"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch ngrok",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "envFile": "${workspaceFolder}/dev.env",
            "env": {
                "VALIDDOMAIN": "1111-111-11-111-111.ngrok.io"
            }
        }
    ]
}